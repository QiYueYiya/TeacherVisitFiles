name: Trigger TeacherVisitFiles Build

on:
  push:
    branches: [ main ]
    paths:
      - 'files/TeacherVisit.json'
  workflow_dispatch:

jobs:
  trigger:
    runs-on: ubuntu-latest
    steps:
      - name: Trigger build-windows.yml in TeacherVisitFiles
        run: |
          curl -X POST \
            -H "Accept: application/vnd.github+json" \
            -H "Authorization: Bearer ${{ secrets.TeacherVisit_TOKEN }}" \
            https://api.github.com/repos/QiYueYiya/TeacherVisitFiles/actions/workflows/build-windows.yml/dispatches \
            -d '{"ref":"main"}'
